# /etc/nginx/sites-available/luckco.in
upstream luckcoin_upstream {
    server 127.0.0.1:8000;
}

# redirect from old domain
server {
    server_name play.luckco.in;
    rewrite ^ https://luckco.in$request_uri? permanent;
}

server {
    server_name www.luckco.in;
    rewrite ^ https://luckco.in$request_uri? permanent;
}

server {
    listen 0.0.0.0:8001;
    server_name luckco.in;
    access_log /var/log/nginx/luckco.in.log;

    location / {
      proxy_set_header X-Real-IP $remote_addr;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header Host $http_host;
      proxy_set_header X-NginX-Proxy true;

      proxy_pass http://luckcoin_upstream;
      proxy_redirect off;
    }
}

# enforce https
server {
    listen 0.0.0.0:8002;
    server_name luckco.in;
    rewrite ^ https://$server_name$request_uri? permanent;
}
